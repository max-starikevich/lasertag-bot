{
  "name": "lasertag-bot",
  "version": "5.6.0",
  "repository": "https://github.com/max-starikevich/lasertag-bot",
  "author": "Max Starikevich <maxim.starikevich@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "engines": {
    "node": "^16",
    "pnpm": "^7"
  },
  "dependencies": {
    "@sentry/node": "^7.21.1",
    "@sentry/tracing": "^7.21.1",
    "axios": "^1.2.0",
    "dedent-js": "^1.0.1",
    "google-spreadsheet": "^3.3.0",
    "lodash": "^4.17.21",
    "logform": "^2.4.2",
    "module-alias": "^2.2.2",
    "telegraf": "^4.11.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.109",
    "@types/google-spreadsheet": "^3.3.0",
    "@types/jest": "^29.2.3",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.190",
    "@types/node": "^16.18.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "serverless": "^3.25.0",
    "ts-jest": "^29.0.3",
    "ts-prune": "^0.10.3",
    "ts-standard": "*",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "dev": "rm -rf dist && tsc-watch -p tsconfig.dev.json --onSuccess 'node --enable-source-maps --inspect dist/src/dev.js'",
    "start": "curl http://localhost:4040/api/tunnels && WEBHOOK_BASE=$(curl http://localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url') pnpm dev",
    "lint": "ts-standard",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest --setupFiles dotenv/config --watch",
    "prepare": "husky install",
    "pre-push": "pnpm lint && pnpm test && pnpm deploy:check-image",
    "ngrok": "ngrok http 4000",
    "build": "tsc -p tsconfig.prod.json",
    "deploy:all": "pnpm deploy:check-image && pnpm deploy:aws && pnpm deploy:webhooks",
    "deploy:check-image": "docker image build -t lasertag-bot .",
    "deploy:aws": "serverless deploy --verbose --stage production",
    "deploy:webhooks": "node --enable-source-maps dist/src/scripts/deploy-webhooks.js"
  },
  "_moduleAliases": {
    "$": "./dist/src"
  },
  "ts-standard": {
    "ignore": [
      "*.js",
      "src/scripts"
    ]
  }
}
