{
  "name": "lasertag-bot",
  "version": "7.1.2",
  "repository": "https://github.com/max-starikevich/lasertag-bot",
  "author": "Max Starikevich <maxim.starikevich@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "engines": {
    "node": "^18",
    "pnpm": "^7"
  },
  "dependencies": {
    "@sentry/node": "^7.47.0",
    "@sentry/tracing": "^7.47.0",
    "axios": "^1.3.5",
    "dedent-js": "^1.0.1",
    "google-spreadsheet": "^3.3.0",
    "html-entities": "^2.3.3",
    "lodash": "^4.17.21",
    "logform": "^2.5.1",
    "module-alias": "^2.2.2",
    "telegraf": "^4.12.2",
    "typesafe-i18n": "^5.24.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/google-spreadsheet": "^3.3.1",
    "@types/jest": "^29.5.0",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "dotenv": "^16.0.3",
    "eslint": "^8.37.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^12.0.0",
    "serverless": "^3.30.1",
    "ts-jest": "^29.1.0",
    "ts-standard": "^12.0.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.3"
  },
  "scripts": {
    "dev": "rm -rf dist && tsc-watch -p tsconfig.dev.json --onSuccess 'node --enable-source-maps --inspect dist/src/dev.js'",
    "start": "curl http://localhost:4040/api/tunnels && WEBHOOK_BASE=$(curl http://localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url') pnpm dev",
    "lint": "ts-standard",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "lang:watch": "typesafe-i18n",
    "prepare": "husky install",
    "pre-push": "pnpm lint && pnpm test && pnpm deploy:build-image",
    "ngrok": "ngrok http 4000",
    "build": "tsc -p tsconfig.prod.json",
    "deploy:all": "pnpm deploy:build-image && pnpm deploy:aws && pnpm deploy:post-deploy",
    "deploy:build-image": "docker image build -t lasertag-bot .",
    "deploy:aws": "serverless deploy --verbose --stage production",
    "deploy:post-deploy": "node --enable-source-maps dist/src/scripts/post-deploy.js"
  },
  "_moduleAliases": {
    "$": "./dist/src"
  },
  "ts-standard": {
    "ignore": [
      "*.js"
    ]
  }
}
