{
  "name": "lasertag-bot",
  "version": "5.2.2",
  "repository": "https://github.com/max-starikevich/lasertag-bot",
  "author": "Max Starikevich <maxim.starikevich@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "engines": {
    "node": "^16"
  },
  "dependencies": {
    "@sentry/node": "^7.16.0",
    "@sentry/tracing": "^7.16.0",
    "axios": "^1.1.3",
    "dedent-js": "^1.0.1",
    "google-spreadsheet": "^3.3.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "telegraf": "^4.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.108",
    "@types/google-spreadsheet": "^3.3.0",
    "@types/jest": "^29.2.0",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.8",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.186",
    "@types/node": "16.11.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "serverless": "^3.23.0",
    "ts-jest": "^29.0.3",
    "ts-prune": "^0.10.3",
    "ts-standard": "^11.0.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "dev": "rm -rf dist && tsc-watch -p tsconfig.dev.json --onSuccess 'node --enable-source-maps --inspect dist/src/dev.js'",
    "start": "curl http://localhost:4040/api/tunnels && WEBHOOK_BASE=$(curl http://localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url') yarn dev",
    "lint": "ts-standard",
    "test": "jest --setupFiles dotenv/config",
    "prepare": "husky install",
    "pre-push": "yarn lint && yarn test && yarn deploy:check-image",
    "build": "tsc -p tsconfig.prod.json",
    "deploy": "yarn deploy:check-image && yarn deploy:aws && yarn deploy:webhooks",
    "deploy:check-image": "docker image build -t lasertag-bot .",
    "deploy:aws": "serverless deploy --verbose --stage production",
    "deploy:webhooks": "node --enable-source-maps dist/src/scripts/deploy-webhooks.js"
  },
  "_moduleAliases": {
    "$": "./dist/src"
  },
  "ts-standard": {
    "ignore": [
      "*.js",
      "src/index.ts",
      "src/scripts"
    ]
  }
}