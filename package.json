{
  "name": "lasertag-bot",
  "version": "4.3.0",
  "repository": "https://github.com/max-starikevich/lasertag-bot",
  "author": "Max Starikevich <maxim.starikevich@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "engines": {
    "node": "^14 || ^16"
  },
  "dependencies": {
    "@sentry/node": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "axios": "^0.26.1",
    "dedent-js": "^1.0.1",
    "google-spreadsheet": "^3.2.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "telegraf": "^4.7.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.94",
    "@types/google-spreadsheet": "^3.2.1",
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.6",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14.18.13",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "serverless": "^3.14.0",
    "ts-jest": "^27.1.3",
    "ts-standard": "^11.0.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "start": "rm -rf dist && tsc-watch -p tsconfig.dev.json --onSuccess 'node --enable-source-maps --inspect dist/src/dev.js'",
    "lint": "ts-standard",
    "test": "jest --setupFiles dotenv/config",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.prod.json",
    "deploy": "yarn deploy:check-image && yarn deploy:aws && yarn deploy:webhooks",
    "deploy:check-image": "docker image build -t lasertag-bot .",
    "deploy:aws": "serverless deploy --verbose --stage production",
    "deploy:webhooks": "node --enable-source-maps dist/src/scripts/deploy-webhooks.js"
  },
  "_moduleAliases": {
    "$": "./dist/src"
  },
  "ts-standard": {
    "ignore": [
      "*.js",
      "src/index.ts",
      "src/scripts"
    ]
  }
}
