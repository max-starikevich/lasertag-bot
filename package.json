{
  "name": "lasertag-bot",
  "version": "7.7.0",
  "repository": "https://github.com/max-starikevich/lasertag-bot",
  "author": "Max Starikevich <maxim.starikevich@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "engines": {
    "node": "^18",
    "pnpm": "^8"
  },
  "dependencies": {
    "@sentry/cli": "^2.18.1",
    "@sentry/node": "^7.54.0",
    "@sentry/tracing": "^7.54.0",
    "axios": "^1.4.0",
    "dayjs": "^1.11.8",
    "dedent-js": "^1.0.1",
    "google-spreadsheet": "^3.3.0",
    "html-entities": "^2.3.5",
    "lodash": "^4.17.21",
    "logform": "^2.5.1",
    "module-alias": "^2.2.3",
    "telegraf": "^4.12.2",
    "typesafe-i18n": "^5.24.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.116",
    "@types/google-spreadsheet": "^3.3.2",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.16.14",
    "@types/uuid": "^9.0.1",
    "dotenv": "^16.1.4",
    "dotenv-cli": "^7.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^12.0.0",
    "serverless": "^3.32.2",
    "ts-jest": "^29.1.0",
    "ts-standard": "^12.0.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "dev": "rm -rf ./dist && tsc-watch -p tsconfig.dev.json --onSuccess 'dotenv -- node dist/src/dev.js'",
    "start": "curl http://localhost:4040/api/tunnels && WEBHOOK_BASE=$(curl http://localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url') pnpm dev",
    "lint": "ts-standard",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "lang:watch": "typesafe-i18n",
    "prepare": "husky install",
    "pre-push": "pnpm lint && pnpm test && pnpm deploy:build",
    "ngrok": "ngrok http 4000",
    "build": "tsc -p ./tsconfig.prod.json",
    "deploy:app": "dotenv -e .env.production -- pnpm _deploy:app",
    "_deploy:app": "pnpm pre-deploy && pnpm deploy:build && pnpm deploy:aws && pnpm post-deploy",
    "deploy:build": "docker image build --progress=plain -t lasertag-bot .",
    "deploy:aws": "serverless deploy --verbose --stage production",
    "pre-deploy": "node dist/src/scripts/check-environment.js",
    "post-deploy": "node dist/src/scripts/update-webhook.js && node dist/src/scripts/update-commands.js && node dist/src/scripts/release-sentry.js"
  },
  "_moduleAliases": {
    "$": "./dist/src"
  },
  "ts-standard": {
    "ignore": [
      "*.js"
    ]
  }
}
